<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/layout1"
    android:background="@color/mywhite"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_large"
    android:paddingBottom="@dimen/spacing_normal"
    android:paddingLeft="@dimen/spacing_large"
    android:paddingRight="@dimen/spacing_large">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dlg_one_button_icon_size"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dlg_one_button_iv_icon"
        android:layout_width="@dimen/dlg_one_button_icon_size"
        android:layout_height="@dimen/dlg_one_button_icon_size"
        android:layout_marginBottom="@dimen/spacing_huge"
        android:src="@drawable/ic_pdf" />

    <TextView
        android:id="@+id/dlg_one_button_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:ellipsize="end"
        android:fontFamily="@string/font_fontFamily_medium"
        android:gravity="center"
        android:maxLines="3"
        android:textSize="20sp"
        tools:text="Neue Klausur" />



</LinearLayout>



    <Spinner
        android:id="@+id/dlg_spinner_category"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingRight="-5dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textSize="22sp">

    </Spinner>



    <com.example.loren.altklausurenneu.Utils.WheelView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dlg_wheel"
       />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button

            android:id="@+id/dlg_one_button_btn_ok"
            style="@style/MediumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@string/font_fontFamily_medium"
            tools:text="OK" />



    </LinearLayout>





</LinearLayout>



